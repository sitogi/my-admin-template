{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types", "../node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"],
}
